<Window x:Class="Trenajer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trenajer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <GridSplitter Width="4" ShowsPreview="True" HorizontalAlignment="Center" Grid.ColumnSpan="2" />
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding ElementName=en, Path =Text}" VerticalAlignment="Top" Height="418" Width="194" x:Name="EnWord" />
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="419" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="194"/>
    </Grid>
</Window>
